{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "pirat": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "inlineTemplate": false,
          "inlineStyle": false,
          "style": "scss",
          "skipTests": true
        },
        "@schematics/angular:class": {
          "skipTests": true
        },
        "@schematics/angular:directive": {
          "skipTests": true
        },
        "@schematics/angular:guard": {
          "skipTests": true
        },
        "@schematics/angular:interceptor": {
          "skipTests": true
        },
        "@schematics/angular:module": {
          "skipTests": true
        },
        "@schematics/angular:pipe": {
          "skipTests": true
        },
        "@schematics/angular:service": {
          "skipTests": true
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/pirat",
            "index": "src/index.html",
            "main": "src/main.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsconfig.app.json",
            "aot": true,
            "assets": [
              "src/favicon.ico",
              "src/assets",
              "src/i18n"
            ],
            "styles": [
              "src/sass/style.scss"
            ],
            "scripts": [
              "node_modules/marked/lib/marked.js"
            ]
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb",
                  "maximumError": "10kb"
                }
              ]
            },
            "testproduction": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.testprod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb",
                  "maximumError": "10kb"
                }
              ]
            },
            "simpledev": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.simpledev.ts"
                }
              ]
            },
            "en": {
              "aot": true,
              "outputPath": "dist/pirat-en",
              "i18nFile": "src/i18n/web-application/messages.en.xlf",
              "i18nFormat": "xlf",
              "i18nLocale": "en"
            },
            "it": {
              "aot": true,
              "outputPath": "dist/pirat-it",
              "i18nFile": "src/i18n/web-application/messages.it.xlf",
              "i18nFormat": "xlf",
              "i18nLocale": "it"
            },
            "de": {
              "aot": true,
              "outputPath": "dist/pirat-de",
              "i18nFile": "src/i18n/web-application/messages.de.xlf",
              "i18nFormat": "xlf",
              "i18nLocale": "de"
            },
            "fr": {
              "aot": true,
              "outputPath": "dist/pirat-fr",
              "i18nFile": "src/i18n/web-application/messages.fr.xlf",
              "i18nFormat": "xlf",
              "i18nLocale": "de"
            },
            "ms": {
              "aot": true,
              "outputPath": "dist/pirat-ms",
              "i18nFile": "src/i18n/web-application/messages.ms.xlf",
              "i18nFormat": "xlf",
              "i18nLocale": "ms"
            }
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "tsconfig.app.json",
              "tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "pirat:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "pirat:build:production"
            },
            "simpledev": {
              "browserTarget": "pirat:build:simpledev"
            },
            "en": {
              "browserTarget": "pirat:build:en"
            },
            "de": {
              "browserTarget": "pirat:build:de"
            },
            "fr": {
              "browserTarget": "pirat:build:fr"
            },
            "it": {
              "browserTarget": "pirat:build:it"
            },
            "ms": {
              "browserTarget": "pirat:build:ms"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "pirat:build"
          }
        },
        "xliffmerge": {
          "builder": "@ngx-i18nsupport/tooling:xliffmerge",
          "options": {
            "xliffmergeOptions": {
              "i18nFormat": "xlf",
              "srcDir": "src/i18n/web-application",
              "genDir": "src/i18n/web-application",
              "defaultLanguage": "en",
              "languages": [
                "ar-EG",
                "de",
                "en",
                "es",
                "fr",
                "hu",
                "it",
                "ms",
                "ru"
              ]
            }
          }
        }
      },
      "i18n": {
        "sourceLocale": "en",
        "locales": {
          "ar-EG": "src/i18n/web-application/messages.ar-EG.xlf",
          "de": "src/i18n/web-application/messages.de.xlf",
          "es": "src/i18n/web-application/messages.es.xlf",
          "fr": "src/i18n/web-application/messages.fr.xlf",
          "hu": "src/i18n/web-application/messages.hu.xlf",
          "it": "src/i18n/web-application/messages.it.xlf",
          "ms": "src/i18n/web-application/messages.ms.xlf",
          "ru": "src/i18n/web-application/messages.ru.xlf"
        }
      }
    }
  },
  "defaultProject": "pirat",
  "cli": {
    "analytics": false
  }
}
